  PROCEDURE SET_PROPERTY(P_VIEWPORT IN STD_VIEWPORT, P_PROPERTY IN NUMBER, P_VALUE IN VARCHAR2);

  FUNCTION GET_NUMBER_PROPERTY(P_VIEWPORT IN STD_VIEWPORT, P_PROPERTY IN NUMBER) RETURN NUMBER;
  
